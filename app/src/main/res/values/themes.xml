<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/red_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_primary</item>
        <item name="colorSecondaryVariant">@color/red_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

        <!-- Normal Background -->
        <item name="android:colorBackground">@color/app_bg_color</item>
        <item name="android:windowBackground">@color/app_bg_color</item>

        <!-- Customizing Others -->
        <item name="appBarLayoutStyle">@style/AppBar.Default</item>
        <item name="toolbarStyle">@style/Toolbar.Default</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle.Red</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
    </style>

    <style name="TextView.Toolbar" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="AppBar.Default" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/TextView.Toolbar</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_card_view_light</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/raleway_semi_bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MaterialButtonStyle.Red">
        <item name="android:backgroundTint">@color/red_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialButtonStyle.Red.Radius">
        <item name="android:backgroundTint">@color/red_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_primary</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/blue_primary</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--Remove any scrim insets applied by BottomNavigationView for system bars-->
        <item name="insetForeground">@android:color/transparent</item>
        <!--Set the background color of BottomNavigationView-->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>